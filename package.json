{
  "name": "inlinepython",
  "displayName": "Inline Python",
  "description": "Execute Python code directly in the text editor",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.51.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:inlinepython.insert"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "inlinepython.insert",
        "title": "Insert Python Code"
      }
    ],

    "configuration": {
        "title": "Inline Python",
        "properties": {
            "inlinepython.preloadScriptPath": {
                "type": "string",
                "description": "Path to a Python script that will be loaded with the interpreter. (Requires restart)"
            },

            "inlinepython.execTimeout": {
                "type": "number",
                "description": "The timeout in milliseconds before a query is stopped from executing",
                "default": 2500,
                "minimum": 100
            }
        }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.51.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}
